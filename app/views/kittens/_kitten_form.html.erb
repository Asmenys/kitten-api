<%=form_with model: kitten do |f|%>
<%= f.label :name, "Kitten name:" %>
<%= f.text_field :name%>
<%= f.label :age, "Kitten age:"%>
<%= f.number_field :age, in:0..10%>
<%= f.label :cuteness, "Kitten cuteness:"%>
<%= f.number_field :cuteness, in:0..10%>
<%= f.label :softness, "Kitten softness:"%>
<%= f.number_field :softness, in:0..10%>
<%= f.submit "Create kitten", :class => 'border-solid border-2 border-b-4 border-black' %>
<% end %>